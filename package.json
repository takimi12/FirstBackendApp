{
  "name": "ts-node-express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon dist/index.js\"",
    "typeorm": "typeorm-ts-node-esm",
    "typeorm:run-migrations": "typeorm-ts-node-esm migration:run --dataSource ./src/data-source.ts",
    "typeorm:generate-migration": "typeorm-ts-node-esm migration:generate ./src/migrations/$npm_config_name --dataSource ./src/data-source.ts",
    "typeorm:create-migration": "typeorm-ts-node-esm migration:create ./src/migrations/$npm_config_name",
    "typeorm:revert-migration": "typeorm-ts-node-esm migration:revert --dataSource ./src/data-source.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "firebase-admin": "^13.5.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
